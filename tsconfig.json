{
  "compilerOptions": {
    "alwaysStrict": true,
    "inlineSourceMap": true,
    // "sourcemap": true,
    "moduleResolution": "node", //to look up node_modules/@types/**
    // "strictNullChecks": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es6"], //add dom for supertest
    "removeComments": true,
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "watch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "./node_modules"
    // "**/*.spec.ts"
  ]
}
