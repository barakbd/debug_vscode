{
  "name": "box_node_cdt",
  "version": "1.0.0",
  "description": "microservice for interfacing with Box API",
  "main": "/dist/server.js",
  "scripts": {
    "postinstall": "tsc",
    "watch": "tsc -w -p ./src",
    "start": "node",
    "debug-inline": "nodemon -r dotenv/config --no-lazy --inspect-brk=9229 --watch dist --ignore *.spec.ts",
    "debug": "nodemon",
    "docker-debug": "docker-compose up",
    "test": "mocha -r ts-node/register -r dotenv/config -w --watch-extensions ts,tsx --recursive src/**/*.{ts,tsx}",
    "test-unit": "NODE_ENV=test mocha --require co-mocha 'dist/*.spec.js'",
    "dev-test-watch": "mocha-typescript-watch"
  },
  "author": "Barak Ben-David",
  "license": "MIT",
  "dependencies": {
    "box-node-sdk": "^1.12.1",
    "express": "^4.16.2",
    "multer": "^1.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^2.2.48",
    "@types/multer": "^1.3.6",
    "@types/node": "^9.4.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "dotenv": "^5.0.0",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12",
    "typescript": "^2.7.1"
  }
}
