{
  "version": "2.0.0",
  "tasks": [
    {
      "identifier": "tsc",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "identifier": "gulp-compile",
      "type": "gulp",
      "task": "compile",
      "problemMatcher": []
    }
  ]
}
